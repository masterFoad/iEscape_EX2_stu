<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.controllers.forms.AddCustomerView">
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

        <Text text="Add new Customer"
              GridPane.columnIndex="0" GridPane.rowIndex="0"
              GridPane.columnSpan="1" />

        <Label text="First Name:"
               GridPane.columnIndex="0" GridPane.rowIndex="1"/>

        <TextField fx:id="txtFirstName"
                GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Last Name:"
               GridPane.columnIndex="0" GridPane.rowIndex="2"/>

        <TextField fx:id="txtLastName"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Button fx:id="btnAddCustomer"
                text="Add"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>




