<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import gui.utils.NumberTextField?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.controllers.forms.add.AddAddress"
          prefHeight="200.0" prefWidth="300.0">


    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Text text="Address:"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="1"/>

    <Label text="City:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <ComboBox fx:id="cmbCities"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label fx:id="errorCity"
           textFill="red"
           GridPane.columnIndex="1" GridPane.rowIndex="2"/>



    <TextField fx:id="txtStreet" promptText="Street"
               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label fx:id="errorStreet"
           textFill="red"
           GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <NumberTextField fx:id="txtHouseNumber" promptText="House Number"
               GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Label fx:id="errorHouseNumber"
           textFill="red"
           GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <NumberTextField fx:id="txtPhoneNumber" promptText="Phone Number"
                     GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Label fx:id="errorPhoneNumber"
           textFill="red"
           GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Button fx:id="btnSetAddress" text="Confirm"
            GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Button fx:id="btnCancel" text="cancel"
            GridPane.columnIndex="0" GridPane.rowIndex="6"/>



</GridPane>
